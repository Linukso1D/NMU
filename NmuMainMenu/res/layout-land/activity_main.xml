<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/button_color_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/button_color_press_grad"
        android:gravity="top" >

        <TextView
            android:id="@id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.99"
            android:background="@color/button_color_press_grad"
            android:gravity="center"
            android:paddingBottom="@dimen/text_view_padding_t_b"
            android:text="17 РјР°СЏ, СЃСѓР±Р±РѕС‚Р°, 5-Р° РїР°СЂР°.Р§РёСЃР»РёС‚РµР»СЊ(LAYOUT-sw320dp), 37 С‚РёР¶РґРµРЅСЊ"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:id="@+id/Sett"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_ico" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" >

        <LinearLayout
            android:id="@id/l_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@id/schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:src="@drawable/schedule" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/schedule"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@id/l_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/l_schedule"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@id/news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:src="@drawable/news" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/news"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_button_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@id/l_teachers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/l_news"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@id/teachers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:src="@drawable/teachers" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/teachers"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_button_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@id/l_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/l_teachers"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@id/library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:src="@drawable/library" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/library"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" >

        <LinearLayout
            android:id="@id/l_maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@id/maps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:src="@drawable/maps" />

            <TextView
                 android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/maps"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_button_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@id/l_transport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/l_maps"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@id/transport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:src="@drawable/transport" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/transport"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_button_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@id/l_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/l_transport"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@id/calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:src="@drawable/calendar" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/calendar"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_button_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@id/l_webcams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/l_calendar"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@id/webcams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:src="@drawable/webcams" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/webcams"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" >

        <LinearLayout
            android:id="@id/l_freepc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@id/freepc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:src="@drawable/freepc" />

            <TextView
                 android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/freepc"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_button_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@id/l_blogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/l_directory"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@id/blogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:src="@drawable/blogs" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/blogs"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_button_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@id/l_clubs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/l_blogs"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@id/clubs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:src="@drawable/clubs" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/clubs"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_button_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@id/l_directory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/l_freepc"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@id/directory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:src="@drawable/directory" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/directory"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_button_size"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>