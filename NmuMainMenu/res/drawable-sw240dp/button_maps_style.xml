<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
        <stroke android:width="1dp" android:color="@color/light_blue_color" />
        <solid android:color="@color/blue_gray_color"/>
        <padding android:left="5dp" android:top="8dp" 
            android:right="5dp" android:bottom="8dp" /> 
        <corners android:radius="4dp" /> 
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
        <stroke android:width="1dp" android:color="@color/blue_gray_color" />
        <solid android:color="@color/light_blue_color"/>
        <padding android:left="5dp" android:top="8dp" 
            android:right="5dp" android:bottom="8dp" /> 
        <corners android:radius="4dp" /> 
        </shape>
    </item>
</selector>