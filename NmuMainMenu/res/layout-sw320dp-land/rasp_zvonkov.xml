                                android:id="@+id/textView7"
                                android:layout_gravity="center"
                                android:text="2"
                                android:textSize="@dimen/text_rasp320_land" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="30dp"
