<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/button_color_press"
                android:centerColor="@color/button_color_press_grad"
                android:endColor="@color/button_color_press" android:angle="270" />
            <stroke android:width="1dp" android:color="@color/button_color_press" />
            <corners android:radius="5dp" />
            <padding android:left="17dp" android:top="7dp"
                android:right="17dp" android:bottom="7dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="@color/button_color_bg"
                android:endColor="@color/button_color_bg" android:angle="270" />
            <stroke android:width="1dp" android:color="@color/button_color_bg" />
            <corners android:radius="5dp" />
            <padding android:left="17dp" android:top="7dp"
                android:right="17dp" android:bottom="7dp" />
        </shape>
    </item>
</selector>