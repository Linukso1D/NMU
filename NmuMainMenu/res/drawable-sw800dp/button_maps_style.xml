<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
        <stroke android:width="4dp" android:color="@color/light_blue_color" />
        <solid android:color="@color/blue_gray_color"/>
      
        <padding android:left="16dp" android:top="21dp" 
            android:right="16dp" android:bottom="21dp" /> 
        <corners android:radius="9dp" /> 
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
        <stroke android:width="4dp" android:color="@color/blue_gray_color" />
        <solid android:color="@color/light_blue_color"/>
        <padding android:left="16dp" android:top="21dp" 
            android:right="16dp" android:bottom="21dp" /> 
        <corners android:radius="9dp" /> 
        </shape>
    </item>
</selector>