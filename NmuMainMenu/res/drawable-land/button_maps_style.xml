<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
                   <stroke android:width="2dp" android:color="@color/light_blue_color" />
        <solid android:color="@color/blue_gray_color"/>
      
        <padding android:left="@dimen/button_padding_left_right" android:top="@dimen/button_padding_top_bottom" 
            android:right="@dimen/button_padding_left_right" android:bottom="@dimen/button_padding_top_bottom" /> 
        <corners android:radius="5dp" /> 
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
                              <stroke android:width="2dp" android:color="@color/blue_gray_color" />
        <solid android:color="@color/light_blue_color"/>
        <padding android:left="@dimen/button_padding_left_right" android:top="@dimen/button_padding_top_bottom" 
            android:right="@dimen/button_padding_left_right" android:bottom="@dimen/button_padding_top_bottom" /> 
        <corners android:radius="5dp" /> 
        </shape>
    </item>
</selector>